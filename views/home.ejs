<%-  layout("/layouts/boilerplates") %>
<body>
  
    <h1>Hello welcome to teach me anything</h1>
    <% for(let projects of ProjectData ) {%>
    <form method="post" action="/projects/projects._id">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= projects.image%> " alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=projects.name%></h5>
          <p class="card-text"><%=projects.PInfo%></p>
          <a href="#" class="btn btn-primary">See details</a>
        </div>
      </div>
    </form>
    <%}%>
    <form method="post" action="/filled_form">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" name="userInfo[email]" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Name</label>
          <input type="name" name = "userInfo[name]" class="form-control" id="exampleInputPassword1" placeholder="Enter Your Name">
        </div>
        <div class="form-group">
            <label for="UserMsg">Enter Some msg for us</label>
            <input type="name" name = "userInfo[msg]" class="form-control" id="exampleInputPassword1" placeholder="Please give us some msg">
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <form method="post" action="/addProject">
        <button>Add Project</button>
      </form>
     
</body>
</html>